<section id="blogpost">
    <div id="blogpost-heading">
        <h1>{{blogPost.post_name}}</h1>
        <p>Author: {{blogPost.user.name}}</p>
    </div>

    <div id="blogpost-content">
        <p>{{blogPost.post_content}}</p>
    </div>

    <div id="comments">
        <h2>Comments</h2>
    </div>

    <div id="add-comment-form">
        <h3>Submit a Comment!</h3>
        <br>
        {{#if logged_in}}
        <form id="add-comment">
            <label for="id">Add your comment:</label>
            <textarea id="comment" name="comment" rows="6" placeholder="Write your comment here..." required></textarea>
            <input id="submit-button" type="submit"/>
        </form>
        {{else}}
        <p>Please <a href="/login">log in</a>.</p>
        {{/if}}
    </div>

</section>